<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/maroon_medium"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.pat.admin.watoto.AboutActivity"
            tools:showIn="@layout/activity_about">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />
            </android.support.design.widget.AppBarLayout>

            <ImageView
                android:id="@+id/ic_village"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:background="@drawable/work_shadow"
                android:src="@drawable/ic_village"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_below="@+id/ic_village"
                android:text="Watoto Villages"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ic_baby"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:src="@drawable/ic_baaby"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ic_village"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_below="@+id/ic_baby"
                android:text="Baby Watoto"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ic_forward"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:src="@drawable/ic_forward"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ic_village"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_below="@+id/ic_forward"
                android:text="Living Hope"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ic_sustain"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:src="@drawable/ic_sustain"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ic_baby"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_below="@+id/ic_sustain"
                android:text="Sustainability"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ic_neght"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:src="@drawable/ic_neight"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ic_forward"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_below="@+id/ic_neght"
                android:text="Neighbourhood"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />
</android.support.v4.widget.DrawerLayout>